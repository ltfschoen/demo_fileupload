<%= form_with(model: menu, local: true, html: { multipart: true }) do |form| %>
  <% if menu.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(menu.errors.count, "error") %> prohibited this menu from being saved:</h2>

      <ul>
      <% menu.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :menu_name %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.text_area :image, id: :menu_image %>
  </div>

  <div class="field">
    <%= form.label :avatar %>
    <%#= form.text_area :avatar, id: :menu_avatar %>
    <%= file_field(:menu, :avatar, accept: 'image/png,image/gif,image/jpeg') %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
